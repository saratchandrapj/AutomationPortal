@{
	ViewBag.Title = "Home Page";
}
<link href="~/Content/corousel.css" rel="stylesheet" />
<script type="text/javascript">
	function classToggle() {
		var el = document.querySelector('.icon-cards__content');
		el.classList.toggle('step-animation');
	}

	document.querySelector('#toggle-animation').addEventListener('click', classToggle);
</script>

<div class="row">
	<h1>
		Welcome to DashBoard
	</h1>
</div>
<div style="padding-top:275px">
		<figure class="icon-cards mt-6">
			<div class="icon-cards__content">
				<div class="icon-cards__item d-flex align-items-center justify-content-center">

					<img src="~/Content/Images/download.png" opacity="10px" />
				</div>
				<div class="icon-cards__item d-flex align-items-center justify-content-center">
					<img src="~/Content/Images/ikso-logo.pdf.png" opacity="10px" />
				</div>
				<div class="icon-cards__item d-flex align-items-center justify-content-center">
					<img src="~/Content/Images/logo.png" opacity="10px" />
				</div>
			</div>
		</figure>
</div>